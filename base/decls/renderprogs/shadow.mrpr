renderProg shadowmap
{
	vertex
	{
		gl_Position = TransformVertex($mvpMatrixX, $mvpMatrixY, $mvpMatrixZ, $mvpMatrixW);

		gl_TexCoord[0].x = dot4( attr_Position, $modelMatrixX );
		gl_TexCoord[0].y = dot4( attr_Position, $modelMatrixY );
		gl_TexCoord[0].z = dot4( attr_Position, $modelMatrixZ );
		gl_TexCoord[0].w = dot4( attr_Position, $modelMatrixW );
	}

	pixel
	{
		gl_FragDepth = distance(gl_TexCoord[0].xyz, $globalLightOrigin[0].xyz) / 3000;
		gl_FragColor = vec4(0.0, 0.0, 0.0, 1.0);
	}
}